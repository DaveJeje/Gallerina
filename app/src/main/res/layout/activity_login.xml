<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_back"
    android:backgroundTint="#6BFFFFFF"
    android:backgroundTintMode="screen">


    <EditText
        android:id="@+id/login_username_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="416dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="#8FFFFFFF"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/user_field"
        android:inputType="textEmailAddress"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:padding="20sp"
        android:textColorHint="@color/md_theme_dark_inversePrimary"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/login_pass_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="72dp"
        android:background="@drawable/roundcorner"
        android:backgroundTint="#8FFFFFFF"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/passw_field"
        android:inputType="textPassword"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:padding="20sp"
        android:textColorHint="@color/md_theme_dark_inversePrimary"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_username_field" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/blue_dark"
        android:hint="@string/iniciar_sesi_n"
        android:text="@string/login_button"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pass_field" />

    <Button
        android:id="@+id/sign_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/round_btn"
        android:backgroundTint="@color/ic_launcher_background"
        android:hint="@string/registrarse"
        android:text="@string/signUp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pass_field" />

    <TextView
        android:id="@+id/recoverpasstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="134dp"
        android:background="#3EFFFFFF"
        android:fontFamily="@font/merriweather_italic"
        android:text="@string/forgot_your_password"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_pass_field" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/merriweather_bold_italic"
        android:text="Welcome Back!"
        android:textAlignment="center"
        android:textColor="@color/md_theme_dark_onPrimary"
        android:textSize="79sp"
        app:layout_constraintBottom_toTopOf="@+id/login_username_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>